<h1>Ownerships</h1>

<%= render 'shared/table_buttons' %>

<table class="tables display" data-source="<%= ownerships_admin_ownerships_url(format: "json") %>">
  <%= render 'shared/datatable', table: Ownership %>
</table>

<h1>Utilisateurs</h1>

<div class="table">
	<%= link_to "Ajouter une relation", relations_admin_user_path(5), class: 'add_relations' %>
</div>

<table class="user_table display" data-source="<%= admin_users_url(format: "json") %>">
  <%= render 'shared/datatable', table: User %>
</table>

<h1>Relations</h1>

<table class="parent_table display" data-source="<%= parents_admin_ownerships_url(format: "json") %>">
  <%= render 'shared/datatable', table: Parent %>
</table>

<h3>Groupes</h3>
<table class="client_tables display">
	<thead>
		<tr>
			<th>Nom</th>
		</tr>
	</thead>
	<tbody>
		<% @groups.each do |element| %>
			<tr>
				<td><%= element.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>

