<%= form_for [:admin, @gallery] do |f| %>	

	<%= render 'shared/error_messages', object: f.object %>

	<table>
		<tr>
			<td><%= f.label :name %></td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<td><%= f.label :description %></td>
			<td><%= f.text_field :description %></td>
		</tr>
		<tr>
			<td><%= f.label :date %></td>
			<td><%= f.date_select :date %></td>
		</tr>
		<tr><td><%= f.submit %></td></tr>
	</table>

<% end %>