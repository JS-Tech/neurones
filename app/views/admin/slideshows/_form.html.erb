<%= form_for [:admin, @slideshow] do |f| %>	

	<%= render 'shared/error_messages', object: f.object %>

	<table>
		<tr>
			<td><%= f.label :name %></td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<td><%= f.label :link %></td>
			<td><%= f.text_field :link %></td>
		</tr>
		<tr>
			<td><%= f.label :date_exp %></td>
			<td><%= f.date_select :date_exp %></td>
		</tr>
		<% if !@slideshow.image.blank? %>
		<tr>
			<td>Image</td>
			<td><%= image_tag @slideshow.image.url %></td>
		</tr>
		<% end %>
		<tr>
			<td><%= f.label :image %></td>
			<td><%= f.file_field :image %></td>
		</tr>
		<tr><td><%= f.submit %></td></tr>
	</table>

	<% end %>