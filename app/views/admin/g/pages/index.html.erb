<%= link_to "Retour", edit_admin_group_path(current_group) %>

<h1>Pages</h1>

<div class="table">
	<a class="add" href="<%= request.fullpath + '/nouveau' %>">Ajouter</a>
	<a class="edit off">Editer</a>
	<a class="edit on" href="#">Editer</a>
	<a class="delete off">Supprimer</a>
	<a class="delete on" href="#" data-method="delete" rel="nofollow" data-confirm="Etes-vous sûr de vouloir supprimer cette entrée ?">Supprimer</a>
</div>
<table class="client_tables display">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nom</th>
			<th>Ordre</th>
			<th>URL</th>
		</tr>
	</thead>
	<tbody>
		<% @pages.each do |page| %>
			<tr>
				<td>
					<%= url(page.url).html_safe %>
					<%= page.id %>
				</td>
				<td><%= page.name %></td>
				<td><%= page.page_order %></td>
				<td><%= page.url %></td>
			</tr>
		<% end %>
	</tbody>
</table>