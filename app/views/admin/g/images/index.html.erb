		<%= image_tag image.image_url %>
		<%= link_to "<i class='foundicong-remove'></i>".html_safe, admin_group_g_image_path(current_group, image), method: :delete, confirm: "Etes-vous sÃ»r de vouloir supprimer cette image?" %>
		<p hidden class="url"><%= image.image.url %></p>
