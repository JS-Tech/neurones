<div id="blog">
	<article>
		<div class="left">
			<div id="article_content" data-mercury="full"><%=raw article.content %></div>
		</div>
		<div class="right">
			<h2><div id="article_title" data-mercury="simple"><%=raw article.title %></div></h2>
			<h3><div id="article_subtitle" data-mercury="simple"><%=raw article.subtitle %></div></h3>

			<p class="infos">
				<span style="font-size:1.5em; padding:0 0 10px 0">
					<i class="foundiconge-flag"></i>
					<select>
						<option value="">-</option>
						<% Category.all.each do |category| %>
								<option value="<%= category.id %>" <%= category.id == article.category_id ? 'selected="selected"' : ''%>><%= category.name %></option>
							<% end %>
					</select>
					<br/><br/>
				</span>
				<i class="foundicon-chat"></i> Par <b><%= article.user.name %></b><br/>

				<% if article.updated_at == nil && article.created_at == nil %>
					<%= l Time.now, :format => :text %>,<br/>
					mis à jour <%= l Time.now, :format => :text %><br/>
				<% else %>
					<%= l article.created_at, :format => :text %>,<br/>
					mis à jour <%= l article.updated_at, :format => :text %><br/>
				<% end %>

				<i class="foundicon-rss"></i> Suivre</a><br/><br/>

				<i class="foundicon-facebook"></i> 
				<i class="foundicon-twitter"></i>
				<i class="foundicon-google-plus"></i>
			</p>

			<p class="img">				
				<img id="mercury_image" data-mercury="image" src="<%= image_src(article) %>">
			</p>

			<p class="interact">
				0 réactions à ce sujet.<br/>
				Participer
			</p>
		</div>
		<div class="like" id="popup_container">
			<p><i class="foundiconge-heart"></i></span></p>
			<p>Vous avez aimé cet article?</p>
		</div>
	</article>
	<div id="article_category" data-mercury="full"><%= article.try(:category_id) %></div>
	<div id="article_image" data-mercury="full"><%= article.mercury_image.try(:id) %></div>
</div>

<script type="text/javascript"> 
$(function() {
	$('#article_category').hide() ;
	$('#article_image').hide() ;
	$('select').change(function() {
 		$('#article_category').html($("select option:selected").attr('value')) ;
	})
	$("#mercury_image").load(function(){ 
		var link = $('#mercury_image').attr('src').split('/');
		var id = link[link.length-2];
		if(id != "blog") {
			$('#article_image').html(id);
		}
	});
});
</script>