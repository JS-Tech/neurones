<%= form_for [:admin, @article] do |f| %>	

	<%= render 'shared/error_messages', object: f.object %>

	<table>
		<tr>
			<td><%= f.label :title %></td>
			<td><%= f.text_field :title %></td>
		</tr>
		<tr>
			<td><%= f.label :subtitle %></td>
			<td><%= f.text_area :subtitle %></td>
		</tr>
		<tr>
			<td><%= f.label :content %></td>
			<td><%= f.text_area :content %></td>
		</tr>
		<tr>
			<td><%= f.label :category_id %></td>
			<td><%= f.collection_select(:category_id, Category.all, :id, :name) %></td>
		</tr>

		<tr><td><%= f.submit class: 'w8-button l-blue' %></td></tr>
	</table>

<% end %>