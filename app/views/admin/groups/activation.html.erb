<h1>Activer le site web</h1>

<div class="panel">
	<h2>Url</h2>
<%= form_for @group, url: activate_admin_group_path(@group.id) do |f| %>

	<%= render 'shared/error_messages', object: f.object %>
	
	<p class="infos"> Commencer par choisir l'url de votre site web. Elle sera du type <b>neurones.ch/MONGDJ</b></p>
	<table>
		<tr>
			<td><%= f.label :url %></td>
			<td><%= f.text_field :url, value: "mon-site-web" %></td>
		</tr>
	</table>
	<p style="margin:30px 0 0 0;text-align:center;font-size:16px">neurones.ch/<span class="chosen">1</span></p>
	<div class="modif_button"><%= f.submit "Finaliser", class: 'w8-button l-blue' %></div>
<% end %>
</div>
<SCRIPT TYPE="text/javascript">
	$('#group_url').change(function() {
		$('.chosen').html('234');
	});
</SCRIPT>