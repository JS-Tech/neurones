var editOverlay = $('.edit_overlay'),
		editComment = $('.edit_comment');

// Fade popup
editComment.html('<%= j render "comments/form" %>').fadeIn(500);

// Set black out (div.overlay)
editOverlay.fadeIn(300);
editOverlay.css({
	width: $(document).width(),
	height: $(document).height()
});

// Set step back
editOverlay.click(function(e){
  editOverlay.fadeOut(300, function(){
    editComment.fadeOut(200);
  });
});
