<% if @comment.comment_id.nil? %> 
	$('.comments div[class="show comments"]').append('<%= j render("comments/comment", comment: @comment) %>') ;
<% else %>
	$('.<%= @comment.comment_id %> .subcomments div[class="show subcomments"]').append('<%= j render("comments/subcomment", subcomment: @comment) %>') ;
<% end %>