<%= form_for @comment, remote: true do |f| %>
	<div class="errors">
		<%= render 'shared/error_messages', object: f.object %>
	</div>
	<div class="title">
		<%= f.text_field :title %>
		<%= f.label :title %>
	</div>
	<div class="content">
		<%= f.text_area :content %>
	</div>
	<div class="submit">
		<span class="submit"><%= f.submit %></span>
		<span class="infos">cliquez en dehors pour annuler</span>
	</div>
<% end %>