<% if !signed_in_user? && request.fullpath != "/login" %>
	<div id="login">
		<div class="big-forms">
			<div class="forms"></div>
		</div>

		<div class="login"> 
			<p><a data-remote="true" href="/login"><i class="foundiconge-down-arrow"></i>Login</a></p>
		</div>
	</div>
<% elsif signed_in_user? %>
	<div id="login">
		<div class="login" style="width: 400px;"> 
			<p><a href="/signout" data-method="delete" rel="nofollow"><i class="foundiconge-remove"></i>Déconnecter</a>Connecté en tant que: <%= link_to @current_user.name, profil_path %></p>
		</div>
	</div>
<% end %>