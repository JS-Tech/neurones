<%= form_for @user do |f| %>

	<%= render 'shared/error_messages', object: f.object %>

	<table>
		<% if !@user.new_record? %>
			<%= fields_for :password do |password_fields| %>
				<tr>
					<td><%= password_fields.password_field :old_password %></td>
					<td><%= password_fields.label :old_password %></td>
				</tr>
			<% end %>
		<% end %>
		<tr>
			<td><%= f.text_field :email %></td>
			<td><%= f.label :email %></td>
		</tr>
		<% if !@user.new_record? %>
			<tr>
				<td><%= f.text_field :gravatar_email %></td>
				<td><%= f.label :gravatar_email %></td>
			</tr>
		<% end %>
		<tr>
			<td><%= f.text_field :name %></td>
			<td><%= f.label :name %></td>
		</tr>
		<tr>
			<td><%= f.password_field :password %></td>
			<td><%= f.label :password %></td>
		</tr>
		<tr>
			<td><%= f.password_field :password_confirmation %></td>
			<td><%= f.label :password_confirmation %></td>
		</tr>
	</table>
	<div class="commit">
		<%= f.submit class: 'w8-button l-blue' %>
		<span style="display:none" class="infos">Cliquez à côté pour annuler</span>
	</div>

<% end %>