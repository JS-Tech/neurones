		<% @groups.each do |group| %>
			<% if group.canton.name != 'Exemple' %>
				[<%= group.longitude %>, <%= group.latitude %>, '<%= "gr#{group.id}" %>', '<%= group.canton.name[0..2].upcase %>'],
			<% end %>
		<% end %>
	];
