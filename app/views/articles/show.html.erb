<div id="blog">
	<article class="<%= @article.id %>">
		
		<%= render "articles/article", article: @article %>

		<div class="comments">
			<h2>RÃ©actions</h2>
			<h3>Exprimez-vous sur cet article</h3>
			<p>
				<%= link_to '<i class="foundicon-rss"></i> Suivre'.html_safe, article_comments_feed_article_comments_path(@article, format: 'atom'), target: '_blank' %>
