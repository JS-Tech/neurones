<div class="container standart">
	<h2>Enregistrez-vous</h2>
	<div class="error"></div>

	<%= form_for :session, url: sessions_path, remote: true do |f| %>
		<div class="infos">
			<p><%= f.label :email %></p>
			<p><%= f.label :password, (t "activerecord.attributes.user.old_password") %></p>
			<p><%= f.label :remember_me, (t "activerecord.attributes.user.remember_me") %></p>
		</div>
		<div class="log">
			<p><%= f.email_field :email %></p>
			<p><%= f.password_field :password %></p>
			<p><%= f.check_box :remember_me, class: 'checkbox' %></p>
			<p class="btn-log"><%= f.submit "Connexion", class: 'btn' %><a href="#"> Mot de passe oubli√©?</a></p><br>
			<p>Besoin d'un compte? <span class="inscription">S'enregistrer gratuitement</span></p><br>
			<p class="pub"><img src="http://cdn.wpbeginner.com/wp-content/uploads/2012/08/gravatarlogo.jpg"> Profitez d'utiliser le service <b>gravatar</b> avec votre nouveau compte.</p>
		</div>
	<% end %>
</div>

