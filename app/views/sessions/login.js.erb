$("html, body").animate({ scrollTop: 0 }, 200);
if($('#login .big-forms .forms').is(':empty')) {
	$('#login .big-forms .forms').append('<%= j render("sessions/login_content") %>');
}
$('#login .big-forms').slideToggle('slow', function() {
	$('#login .login a').html(
    $(this).is(':visible') ? '<i class="foundiconge-up-arrow"></i> Login' : '<i class="foundiconge-down-arrow"></i> Login'
  );
  if($('#login .big-forms').is(':visible')) {
  	document.location.hash = "log" ;
  }
  else {
  	document.location.hash = "" ;
  }
});

// popup sign in
$('#login .big-forms .forms .log p a.inscription').click(function(){
  $('#login .container_inscription').toggle(true);
});
