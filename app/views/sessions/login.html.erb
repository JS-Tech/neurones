<% provide(:title, 'Connexion') %>

<div class="login">

<h1>Connexion</h1>

<%= form_for :session, html: {id: 'login_form'}, url: sessions_path do |f| %>
	<table>
		<tr>
			<td><%= f.label :email %></td>
			<td><%= f.email_field :email %></td>
		</tr>

		<tr>
			<td><%= f.label :password, (t "activerecord.attributes.user.old_password") %></td>
			<td><%= f.password_field :password %></td>
		</tr>

		<tr>
			<td><%= f.label :remember_me, (t "activerecord.attributes.user.remember_me") %></td>
			<td><%= f.check_box :remember_me %></td>
		</tr>
		
	</table>

	<div class="commit">
		<%= f.submit "Connexion", class: 'w8-button l-blue' %>
	</div>

<% end %>

</div>