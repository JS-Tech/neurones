<% provide(:title, 'Index') %>

<%= render 'show', page: @page %>

<%= render 'shared/map', groups: @groups %>

<% if @event %>
<div class="separator"></div>
<h2>Prochain événement</h2>
<article class="event">
	<h3> <%= link_to @event.theme, '/evenements' %> </h3>
	<p> <%= raw simple_format(truncate(@event.info.to_s, length: 200, separator: ' '), {}, sanitize: false) %> </p>
</article>
<% end %>

<% if @article %>
<div class="separator"></div>
<h2 style="margin: 0 0 -40px 0">Dernier article du blog</h2>
<div id="blog">
	<article class="<%= @article.id %>">
		<%= render "articles/article", article: @article %>
	</article>
</div>
<% end %>